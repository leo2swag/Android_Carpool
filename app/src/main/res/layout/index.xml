<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:paddingBottom="1sp"
        android:background="@color/colorLightGrey"
        android:gravity="center">
        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/index_rate_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ratingback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightGrey"
        android:gravity="center">
        <RatingBar
            android:id="@+id/index_ratingBar"
            android:numStars="5"
            android:rating="@string/profile_rate"
            android:stepSize="0.1"
            android:isIndicator="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:progressBackgroundTint="@color/ratingback"
            android:progressTint="@color/colorTheme" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/v5" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorLightGrey"
        android:paddingTop="15dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            app:srcCompat="@mipmap/leo2"
            android:layout_weight="1"
            android:layout_marginRight="15dp"/>
        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            app:srcCompat="@mipmap/leo2"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorLightGrey"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
        <Button
            android:id="@+id/roundBtn1"
            android:background="@drawable/circlebutton"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:text="@string/clickmequickstart"
            android:textColor="@color/colorLightGrey"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorLightGrey">
        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            app:srcCompat="@mipmap/leo2"
            android:layout_weight="1"
            android:layout_marginRight="15dp"/>
        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            app:srcCompat="@mipmap/leo2"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>



</android.support.constraint.ConstraintLayout>